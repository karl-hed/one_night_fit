

<div class="container mt-4 d-flex align-items-center">
<h2>Fits</h2>
</div>

<div class="container d-flex">
    <% @articles.each do |article| %>
    <div class="row">

        <div class="card m-3" style="width: 18rem;">
            <div class="card-body  ">
            <div class="card-img-top d-flex justify-content-center">
              <% if article.photos.attached? %>
                <%= cl_image_tag article.photos.first.key, width: 200, crop: :fill %>
              <% else  %>
                <img class="card-img-top" src="https://anindigoday.com/wp-content/uploads/2021/03/how-to-condition-a-leather-jacket.jpg" alt="Card image cap">
              <% end %>
            </div>

              <h5 class="card-title py-2"><%= article.name %></h5>
              <p class="card-text"><strong><%= article.category %></strong></p>
              <p class="card-text"><%= article.price %>$</p>

              <div class="btn btn-flat d-flex justify-content-center">
                <%= link_to "View", article, :class => "btn" %>
              </div>
            </div>
        </div>

    </div>


    <% end %>
</div>

<p><%= link_to "Create a new post", new_article_path %></p>
