
    <div class="container mt-5">
      <div class="row justify-content-center ">
        <div class="col-12 col-lg-4 rounded">
          <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <% @article.photos.each do |photo| %>
            <div class="carousel-item active">
              <%= cl_image_tag photo.key, class:"img-fluid ", :width=>800, :height=>1000, :gravity=>"auto", :crop=>"fill"%>
            </div>
            <% end %>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>



        <div class="col-12 col-lg-5">
          <div class="p-4 border rounded mb-5 mx-4 shadow-lg p-3 mb-5 bg-white rounded r">
              <h3><%= @article.name %></h3>
              <p class="mt-1"><%= @article.category %></p>
              <h5><strong>$<%= @article.price %></strong></h5>
              <br>
              <p><span class="text-black-50"></span><%= @article.description %></p>
                <br>
                <br>
              <%= link_to 'Book now', new_article_booking_path(@article), :class => "btn btn-success w-100 rounded btn-lg" %>
              <br>
              <br>

              <br>
                <br>
                <%= button_to "Delete", @article, method: :delete, class:"btn btn-link"%>
          </div>
        </div>
      </div>
    </div>
<%# btn btn-success w-100 rounded btn-lg %>
